\DeclareOption{english}{\renewcommand*{\listfixmename}{List of FIXME's}}
\DeclareOption{french}{\renewcommand*{\listfixmename}{Liste des FIXME's}}
\DeclareOption{francais}{\ExecuteOptions{french}}
