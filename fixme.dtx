\newcommand\@listoffixmes@article{%
  \section*{\listfixmename
    \@mkboth{\MakeUppercase\listfixmename}%
    {\MakeUppercase\listfixmename}}%
  \@starttoc{lox}%
  }
\newcommand*\l@fixme@article{\@dottedtocline{1}{1.5em}{2.3em}}

